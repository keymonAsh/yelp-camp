<%- include("../partials/header") %> 


<div class="container">


    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">out</li>
                <li class="list-group-item">of</li>
                <li class="list-group-item">Content</li>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card mb-3">
                <img class="card-img-top" src="<%= campground.imgURL%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title%></h5>

                    <p class="card-text"><%= campground.disc%></p>
                    <p class="card-text lead">Campground By : <%= campground.author.username%></p>
                    
                    <% if (currUser && campground.author.id.equals(currUser._id)) { %>
                        <div>
                            <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id%>/edit">Edit</a>
                            <form class="float-right" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-sm">DELETE</button>
                            </form>
                        </div>
                    <% } %>
                    

                </div>
            </div>
            <a class="float-right btn btn-success" href="/campgrounds/<%= campground._id%>/comments/new">Add a comment</a>

            <!-- COMMENTS -->

            <h1>Comments</h1>

            <% campground.comments.forEach(comment => { %>
                <p><strong><%= comment.author.username%></strong> : <%= comment.text%></p>
                
                <% if (currUser && comment.author.id.equals(currUser._id)) { %>
                    <a href="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>/edit">Edit</a>
                    <form action="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-xs">DELETE</button>
                    </form>
                <% } %>

            <% }) %>
            
           <hr>


        </div>




    </div>

    
    <p></p>
    

    

    
</div>

<%- include("../partials/footer") %> 