<%- include("../partials/header") %> 

<h1>Edit : <%= campground.title%></h1>
<div class="container">
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input type="text" class="form-control" name="campground[imgURL]" value=" <%= campground.imgURL%>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Enter the discriptions</label>
          <textarea class="form-control" name="campground[disc]" rows="3"><%= campground.disc%></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include("../partials/footer") %> 